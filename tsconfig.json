{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./build",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  }
}
